    <script>
        function analyzeHealth() {
            const age = parseInt(document.getElementById('age').value) || 45;
            const gender = document.getElementById('gender').value;
            const height = parseInt(document.getElementById('height').value) || 170;
            const weight = parseInt(document.getElementById('weight').value) || 70;
            const symptom = document.getElementById('symptom').value;
            const smoking = document.getElementById('smoking').checked;
            const drinking = document.getElementById('drinking').checked;
            const exercise = document.getElementById('exercise').checked;
            const stress = document.getElementById('stress').checked;

            const resultDiv = document.getElementById('healthResult');
            resultDiv.innerHTML = '<div class="text-center py-8"><div class="text-4xl pulse">â³</div><p class="mt-4">AI ë¶„ì„ ì¤‘...</p></div>';

            setTimeout(() => {
                const bmi = (weight / ((height/100) ** 2)).toFixed(1);
                let bmiStatus, bmiColor;
                if (bmi < 18.5) { bmiStatus = 'ì €ì²´ì¤‘'; bmiColor = 'text-blue-400'; }
                else if (bmi < 25) { bmiStatus = 'ì •ìƒ'; bmiColor = 'text-green-400'; }
                else if (bmi < 30) { bmiStatus = 'ê³¼ì²´ì¤‘'; bmiColor = 'text-yellow-400'; }
                else { bmiStatus = 'ë¹„ë§Œ'; bmiColor = 'text-red-400'; }

                let riskScore = 20;
                if (age > 50) riskScore += 15;
                if (smoking) riskScore += 20;
                if (drinking) riskScore += 10;
                if (!exercise) riskScore += 15;
                if (stress) riskScore += 10;
                if (bmi >= 25) riskScore += 10;
                riskScore = Math.min(100, riskScore);

                let riskLevel, riskColor;
                if (riskScore < 30) { riskLevel = 'ë‚®ìŒ'; riskColor = 'text-green-400'; }
                else if (riskScore < 60) { riskLevel = 'ë³´í†µ'; riskColor = 'text-yellow-400'; }
                else { riskLevel = 'ë†’ìŒ'; riskColor = 'text-red-400'; }

                const recommendations = [];
                if (smoking) recommendations.push('ê¸ˆì—° í”„ë¡œê·¸ë¨ ì°¸ì—¬ ê¶Œì¥');
                if (!exercise) recommendations.push('ì£¼ 3íšŒ ì´ìƒ ìœ ì‚°ì†Œ ìš´ë™ ê¶Œì¥');
                if (bmi >= 25) recommendations.push('ì²´ì¤‘ ê´€ë¦¬ í”„ë¡œê·¸ë¨ ê¶Œì¥');
                if (stress) recommendations.push('ìŠ¤íŠ¸ë ˆìŠ¤ ê´€ë¦¬ ìƒë‹´ ê¶Œì¥');
                if (age > 40) recommendations.push('ì •ê¸° ê±´ê°•ê²€ì§„ ê¶Œì¥');
                if (recommendations.length === 0) recommendations.push('í˜„ì¬ ê±´ê°• ìƒíƒœ ìœ ì§€');

                resultDiv.innerHTML = `
                    <div class="space-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="p-4 bg-gray-900 rounded-lg text-center">
                                <div class="text-sm text-gray-400">BMI</div>
                                <div class="text-2xl font-bold ${bmiColor}">${bmi}</div>
                                <div class="text-xs ${bmiColor}">${bmiStatus}</div>
                            </div>
                            <div class="p-4 bg-gray-900 rounded-lg text-center">
                                <div class="text-sm text-gray-400">ê±´ê°• ìœ„í—˜ë„</div>
                                <div class="text-2xl font-bold ${riskColor}">${riskScore}%</div>
                                <div class="text-xs ${riskColor}">${riskLevel}</div>
                            </div>
                        </div>
                        <div class="p-4 bg-gray-900 rounded-lg">
                            <div class="text-sm text-gray-400 mb-3">AI ê±´ê°• ê¶Œì¥ì‚¬í•­</div>
                            <ul class="space-y-2">
                                ${recommendations.map(r => `<li class="flex items-start gap-2 text-sm"><span class="text-green-400">âœ“</span>${r}</li>`).join('')}
                            </ul>
                        </div>
                        <div class="p-4 bg-blue-900/30 border border-blue-500/30 rounded-lg">
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-400">ê¶Œì¥ ê²€ì§„</span>
                                <span class="text-blue-400">${age > 40 ? 'ì¢…í•©ê±´ê°•ê²€ì§„' : 'ê¸°ë³¸ê±´ê°•ê²€ì§„'}</span>
                            </div>
                            <div class="flex justify-between text-sm mt-2">
                                <span class="text-gray-400">AI ë¶„ì„ ì‹œê°„</span>
                                <span class="text-green-400 font-bold">0.045ms</span>
                            </div>
                        </div>
                        <div class="text-center text-green-400 text-sm">
                            âœ… OpenHash ê±´ê°• ê¸°ë¡ ì €ì¥ ì™„ë£Œ
                        </div>
                    </div>
